    <script>
        // Tab switching functionality
        const tabs = {
            input: {
                tab: document.getElementById('input-tab'),
                content: document.getElementById('input-content')
            },
            output: {
                tab: document.getElementById('output-tab'),
                content: document.getElementById('output-content')
            },
            settings: {
                tab: document.getElementById('settings-tab'),
                content: document.getElementById('settings-content')
            }
        };

        function switchTab(activeTab) {
            // Reset all tabs
            Object.values(tabs).forEach(tab => {
                tab.tab.classList.remove('tab-active', 'text-blue-600');
                tab.tab.classList.add('text-gray-500');
                tab.content.classList.add('hidden');
            });
            
            // Activate selected tab
            activeTab.tab.classList.add('tab-active', 'text-blue-600');
            activeTab.tab.classList.remove('text-gray-500');
            activeTab.content.classList.remove('hidden');
        }

        tabs.input.tab.addEventListener('click', () => switchTab(tabs.input));
        tabs.output.tab.addEventListener('click', () => switchTab(tabs.output));
        tabs.settings.tab.addEventListener('click', () => switchTab(tabs.settings));

        // Obfuscation functionality (simplified for demo)
        document.getElementById('obfuscate-btn').addEventListener('click', function() {
            const inputCode = document.getElementById('input-code').value;
            
            if (!inputCode.trim()) {
                alert('Please enter some Lua code to obfuscate!');
                return;
            }
            
            // Simulate obfuscation (in a real app, this would be more complex)
            let obfuscatedCode = `-- Obfuscated with LuaU Obfuscator\n`;
            obfuscatedCode += `-- Original size: ${inputCode.length} characters\n\n`;
            
            // Simple obfuscation for demo purposes
            obfuscatedCode += `local ${generateRandomVar()} = (function()\n`;
            obfuscatedCode += `    local ${generateRandomVar()} = {\n`;
            
            // Split code into lines and obfuscate each
            const lines = inputCode.split('\n');
            lines.forEach((line, i) => {
                if (line.trim()) {
                    obfuscatedCode += `        [${i+1}] = "${btoa(line)}",\n`;
                }
            });
            
            obfuscatedCode += `    }\n\n`;
            obfuscatedCode += `    local ${generateRandomVar()} = ""\n`;
            obfuscatedCode += `    for ${generateRandomVar()}, ${generateRandomVar()} in pairs(${generateRandomVar()}) do\n`;
            obfuscatedCode += `        ${generateRandomVar()} = ${generateRandomVar()} .. atob(${generateRandomVar()}) .. "\\n"\n`;
            obfuscatedCode += `    end\n`;
            obfuscatedCode += `    return ${generateRandomVar()}\n`;
            obfuscatedCode += `end)()\n\n`;
            obfuscatedCode += `loadstring(${generateRandomVar()})()`;
            
            // Update output
            document.getElementById('output-code').value = obfuscatedCode;
            updateStats(obfuscatedCode);
            
            // Switch to output tab
            switchTab(tabs.output);
        });

        function generateRandomVar() {
            const prefix = document.getElementById('var-prefix').value || '_';
            const length = parseInt(document.getElementById('var-length').value) || 8;
            const charset = document.getElementById('var-charset').value;
            
            let chars;
            if (charset === 'hexadecimal') {
                chars = '0123456789abcdef';
            } else if (charset === 'unicode') {
                chars = 'ξψωφβμλκζηθιεδγβα';
            } else {
                chars = 'abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789';
            }
            
            let result = prefix;
            for (let i = 0; i < length; i++) {
                result += chars.charAt(Math.floor(Math.random() * chars.length));
            }
            return result;
        }

        function updateStats(code) {
            const charCount = code.length;
            const lineCount = code.split('\n').length;
            const size = (charCount / 1024).toFixed(2);
            
            document.getElementById('char-count').textContent = charCount;
            document.getElementById('line-count').textContent = lineCount;
            document.getElementById('size').textContent = size + ' KB';
        }

        // Copy functionality
        document.getElementById('copy-btn').addEventListener('click', function() {
            const outputCode = document.getElementById('output-code');
            outputCode.select();
            document.execCommand('copy');
            
            const copyBtn = document.getElementById('copy-btn');
            copyBtn.innerHTML = '<i class="fas fa-check mr-2"></i>Copied!';
            copyBtn.classList.add('copied');
            
            setTimeout(() => {
                copyBtn.innerHTML = '<i class="fas fa-copy mr-2"></i>Copy';
                copyBtn.classList.remove('copied');
            }, 2000);
        });

        // FAQ accordion
        document.querySelectorAll('.faq-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                const content = this.nextElementSibling;
                const icon = this.querySelector('i');
                
                if (content.classList.contains('hidden')) {
                    content.classList.remove('hidden');
                    icon.style.transform = 'rotate(180deg)';
                } else {
                    content.classList.add('hidden');
                    icon.style.transform = 'rotate(0deg)';
                }
            });
        });

        // Update stats when output changes
        document.getElementById('output-code').addEventListener('input', function() {
            updateStats(this.value);
        });
    </script>
</body>
</html>
